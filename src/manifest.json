{
  "manifest_version": 3,
  "name": "Beautify Gitlab MR",
  "version": "0.9",
  "description": "Add useful features to the Gitlab interface",
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "32": "icon.png"
    },
    "default_title": "Beautify Gitlab MR"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "https://gitlab.com/*",
    "https://gitlab.canal-plus.com/"
  ],
  "optional_host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://gitlab.com/*",
        "https://gitlab.canal-plus.com/"
      ],
      "js": ["content.js"]
    }
  ]
}
